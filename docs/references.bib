@Article{Vikhlinin2006,
  Title                    = {Chandra sample of nearby relaxed galaxy clusters: mass, gas fraction, and mass-temperature relation},
  Author                   = {A. Vikhlinin and A. Kravtsov and W. Forman and C. Jones and M. Markevitch and S. S. Murray and L. Van Speybroeck},
