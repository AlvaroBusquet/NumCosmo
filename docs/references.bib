  Author                   = {{Hou}, Z. and {Reichardt}, C.~L. and {Story}, K.~T. and {Follin}, B. and {Keisler}, R. and {Aird}, K.~A. and {Benson}, B.~A. and {Bleem}, L.~E. and {Carlstrom}, J.~E. and {Chang}, C.~L. and {Cho}, H.-M. and {Crawford}, T.~M. and {Crites}, A.~T. and {de Haan}, T. and {de Putter}, R. and {Dobbs}, M.~A. and {Dodelson}, S. and {Dudley}, J. and {George}, E.~M. and {Halverson}, N.~W. and {Holder}, G.~P. and {Holzapfel}, W.~L. and {Hoover}, S. and {Hrubes}, J.~D. and {Joy}, M. and {Knox}, L. and {Lee}, A.~T. and {Leitch}, E.~M. and {Lueker}, M. and {Luong-Van}, D. and {McMahon}, J.~J. and {Mehl}, J. and {Meyer}, S.~S. and {Millea}, M. and {Mohr}, J.~J. and {Montroy}, T.~E. and {Padin}, S. and {Plagge}, T. and {Pryke}, C. and {Ruhl}, J.~E. and {Sayre}, J.~T. and {Schaffer}, K.~K. and {Shaw}, L. and {Shirokoff}, E. and {Spieler}, H.~G. and {Staniszewski}, Z. and {Stark}, A.~A. and {van Engelen}, A. and {Vanderlinde}, K. and {Vieira}, J.~D. and {Williamson}, R. and {Zahn}, O.},
