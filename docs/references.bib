@Article{Frenk1999,
  Title                    = {The Santa Barbara cluster comparison project: a comparison of cosmological hydrodynamics solutions},
  Author                   = {C. S. Frenk and S. D. M. White and P. Bode and J. R. Bond and G. L. Bryan and R. Cen and H. M. P. Couchman and A. E. Evrard and N. Gnedin and A. Jenkins and A. M. Khokhlov and A. Klypin and J. F. Navarro and M. L. Norman and J. P. Ostriker and J. M. Owen and F. R. Pearce and U. -L. Pen and M. Steinmetz and P. A. Thomas and J. V. Villumsen and J. W. Wadsley and M. S. Warren and G. Xu and G. Yepes},
  Journal                  = {Astrophys. J.},
