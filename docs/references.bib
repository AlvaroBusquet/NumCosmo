@Article{Evrard2008,
  Title                    = {Virial Scaling of Massive Dark Matter Halos: Why Clusters Prefer a High Normalization Cosmology},
  Author                   = {A. E. Evrard and J. Bialek and M. Busha and M. White and S. Habib and K. Heitmann and M. Warren and E. Rasia and G. Tormen and L. Moscardini and C. Power and A. R. Jenkins and L. Gao and C. S. Frenk and V. Springel and S. D. M. White and J. Diemand},
